"prevent backwards compatibility with vi
set nocompatible

set autoindent
set smartindent

"tab width
set tabstop=4

"use spaces instead of tab
set shiftwidth=4

"let cursor briefly jump to matching parens
set showmatch

"show status line for each window
set ruler

"highlight search matches
set hls

"incremental search
set incsearch

"let cursor go anywhere
"set virtualedit=all

"case insensitive search
set ignorecase
set smartcase
